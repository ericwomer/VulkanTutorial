{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Meson Configure",
            "type": "shell",
            "command": "meson build/"
        },
        {
            "label": "Meson Reconfigure",
            "type": "shell",
            "command": "meson build/ --reconfigure"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "ninja -C build/ clean"
        },
        {
            "label": "Compile",
            "type": "shell",
            "command": "ninja -C build/",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "build/vktut"
        }
    ]
}